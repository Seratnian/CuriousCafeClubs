<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ccc_game.curiouscafeclubs.GameMenu"
    tools:showIn="@layout/activity_game_menu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/avatar_00"
            app:srcCompat="@drawable/avatar_00" />

        <ImageView
            android:id="@+id/avatar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/avatar_01"
            app:srcCompat="@drawable/avatar_00" />

        <ImageView
            android:id="@+id/avatar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/avatar_02"
            app:srcCompat="@drawable/avatar_00" />

        <ImageView
            android:id="@+id/avatar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/avatar_03"
            app:srcCompat="@drawable/avatar_00" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/coffeeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/coffee"
            app:layout_constraintBottom_toTopOf="@+id/mailsButton"
            app:layout_constraintEnd_toStartOf="@+id/messagesButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/coffee" />

        <ImageView
            android:id="@+id/phonesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chatroomsButton"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/messagesButton"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/phones" />

        <ImageView
            android:id="@+id/mailsButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/mails"
            app:layout_constraintBottom_toTopOf="@+id/photosButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coffeeButton"
            app:srcCompat="@drawable/mails" />

        <ImageView
            android:id="@+id/messagesButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/messages"
            app:layout_constraintBottom_toTopOf="@+id/chatroomsButton"
            app:layout_constraintEnd_toStartOf="@+id/phonesButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/coffeeButton"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/messages" />

        <ImageView
            android:id="@+id/photosButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/messagesButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/photos"
            android:tint="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/guestListButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mailsButton"
            app:srcCompat="@drawable/photos" />

        <ImageView
            android:id="@+id/chatroomsButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/chatrooms"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/chatrooms" />

        <ImageView
            android:id="@+id/guestListButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/phonesButton"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/guestList"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photosButton"
            app:srcCompat="@drawable/guestlist" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
